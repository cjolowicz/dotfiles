# -*-sh-*-
# pip should only run if there is a virtualenv currently activated
export PIP_REQUIRE_VIRTUALENV=true
alias pip-system='PIP_REQUIRE_VIRTUALENV= pip'

pip_user() {
    PIP_REQUIRE_VIRTUALENV= pip "$@" --user
}

alias pip-user=pip_user

# macos: add target bindir of `pip --user` to PATH
for directory in $HOME/Library/Python/*/bin
do
    if [ -d "$directory" ]
    then
	prepend_directory PATH $directory
    fi
done
