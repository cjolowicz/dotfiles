# -*-sh-*-

export LANG=en_US.UTF-8
export PAGER=less
export EDITOR=emacsclient
export VISUAL=$EDITOR
export EMAIL=cj@dealloc.org

if which -s w3m ; then
    export BROWSER=w3m
fi

if [ -x /usr/bin/dircolors ] ; then
    eval "$(dircolors -b)"
fi

if [ -x /usr/bin/lesspipe ] ; then
    eval "$(SHELL=/bin/sh lesspipe)"
fi
