# -*-sh-*-

export PERL5LIB=~/local/perl5/lib

for dir in ~/local/perl5/bin ; do
    if [ -d "$dir" ] ; then
        case $PATH in
            "$dir" | "$dir":* | *:"$dir" | *:"$dir":*) ;;
            *) export PATH="$dir":"$PATH" ;;
        esac
    fi
done

if [ -d "$PERL5LIB" ] ; then
    eval $(perl -I$HOME/local/perl5/lib/perl5 -Mlocal::lib=$HOME/local/perl5)
fi
