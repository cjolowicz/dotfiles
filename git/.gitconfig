[include]
	path = .gitconfig.d/user.conf
[core]
	editor = emacsclient --alternate-editor=
	excludesfile = ~/.gitignore_global
[init]
	defaultBranch = main
[commit]
	gpgsign = true
[tag]
	forceSignAnnotated = true
[push]
	default = current
[pull]
	ff = only
[rebase]
	autosquash = true
[alias]
	l1 = log --oneline
	graph = log --graph --all --oneline
	plog = log
	pdiff = diff --stat --patch
	pshow = show
	summary = show --no-patch --pretty=%s
	haul = !git fetch --prune --all && git merge --ff-only
[pager]
	plog = less -FXR +/^commit.*
	pdiff = less -FXR~ +/^diff.* +g
	pshow = less -FXR +/^diff.* +g
