[include]
	path = .gitconfig.d/user.conf
[core]
	editor = emacsclient --alternate-editor=
	excludesfile = ~/.gitignore_global
	pager = diff-so-fancy | less --tabs=4 -RFX
[init]
	defaultBranch = main
[commit]
	gpgsign = true
[tag]
	forceSignAnnotated = true
[push]
	default = current
[pull]
	ff = only
[rebase]
	autosquash = true
	updateRefs = true
[alias]
	l1 = log --oneline
	graph = log --graph --all --oneline
	plog = log
	pdiff = diff --stat --patch
	pshow = show
	title = show --no-patch --pretty=%s
	haul = !git fetch --prune --all && git merge --ff-only
	watch = "!f() { gh run list --branch $(git rev-parse --abbrev-ref HEAD) -L 1 --json databaseId -q '.[0].databaseId' | xargs gh run watch; }; f"
[pager]
	plog = less -FXR +/^commit.*
	pdiff = less -FXR~ +/^diff.* +g
	pshow = less -FXR +/^diff.* +g
[interactive]
	diffFilter = diff-so-fancy --patch
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
