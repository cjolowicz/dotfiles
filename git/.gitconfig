[user]
	name = Claudio Jolowicz
	email = mail@claudiojolowicz.com
[core]
	editor = emacsclient
	excludesfile = /Users/claudio/.gitignore_global
[color]
	ui = true
[push]
	default = matching
[alias]
	unstage = reset HEAD --
[pager]
	status = true
[diff "gzip"]
	textconv = gzip -cd
[diff "xml-gzip"]
	textconv = gzip -cd | xmllint --exc-c14n
