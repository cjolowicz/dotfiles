[include]
	path = .gitconfig.d/user.conf
[core]
	editor = emacsclient
[init]
	defaultBranch = main
[pull]
	ff = only
[alias]
	l1 = log --oneline
	graph = log --graph --all --oneline
	plog = log
	pdiff = diff
	pshow = show
[pager]
	plog = less -FXR +/^commit.*
	pdiff = less -FXR~ +/^diff.*
	pshow = less -FXR +/^diff.* +g
