[user]
	name = Claudio Jolowicz
	email = claudio.jolowicz@cyren.com
	signingkey = E6BDB18E3A5888BF
[commit]
	gpgsign = true
[core]
	editor = emacsclient
	excludesfile = /Users/claudio/.gitignore_global
[push]
	default = current
[alias]
	unstage = reset HEAD --
	l1 = log --oneline
	graph = log --oneline --graph --all --decorate
	nlog = log
	ndiff = diff
	nshow = show
[pager]
	status = true
	nlog = less -FXR +/^commit.*
	ndiff = less -FXR~ +/^diff.*
	nshow = less -FXR +/^diff.* '+<'
[diff "gzip"]
	textconv = gzip -cd
[diff "xml-gzip"]
	textconv = gzip -cd | xmllint --exc-c14n
[rebase]
	autosquash = true
