#!/bin/bash
alias -- -='cd -'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias 1='pushd +1'
alias 2='pushd +2'
alias 3='pushd +3'
alias 4='pushd +4'
alias 5='pushd +5'
alias 6='pushd +6'
alias 7='pushd +7'
alias 8='pushd +8'
alias 9='pushd +9'
alias 10='pushd +10'
alias 11='pushd +11'
alias 12='pushd +12'
alias 13='pushd +13'
alias 14='pushd +14'
alias 15='pushd +15'
alias 16='pushd +16'
alias 17='pushd +17'
alias 18='pushd +18'
alias 19='pushd +19'
alias d='dirs -v'
alias e='envvars'
alias g='git graph'
alias cp='cp --verbose --interactive'
alias ls='exa --icons'
alias la='exa --icons --all'
alias ll='exa --icons --all --long --time-style=long-iso'
alias md='markdown'
alias mv='mv --verbose --interactive'
alias pd='pushd'
alias edit='$EDITOR'
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias mkdir='mkdir --verbose --parents'
alias path='echo -e ${PATH//:/\\n}'
alias cat='bat -p'
alias diff='batdiff'
alias tree='exatree'
alias -- -h='usage -h'
alias -- --help='usage'

# Enable completion for aliases.
complete -o nospace -F _cd pd
