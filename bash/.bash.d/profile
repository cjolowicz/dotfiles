# -*-sh-*-

if [ $UID -eq 0 ] ; then
    umask 0022
fi

for dir in /usr/local/bin ~/bin ~/local/bin ; do
    if [ -d $dir ] ; then
        case $PATH in
            *:"$dir":*) ;;
            *) export PATH=$dir:"${PATH}" ;;
        esac
    fi
done

for dir in ~/man ~/local/man ~/local/share/man ; do
    if [ -d $dir ] ; then
        case $MANPATH in
            *:"$dir":*) ;;
            *) export MANPATH=$dir:"${MANPATH}" ;;
        esac
    fi
done

ulimit -c unlimited
