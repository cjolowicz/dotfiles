# -*-sh-*-

if [ -x /usr/bin/tput ] && tput setaf 1 >&/dev/null; then
    if [ $UID -eq 0 ] ; then
        PS1=\
'\[\033[01;31m\]\u@\h\[\033[00m\]('\
'\[\033[01;34m\]$?\[\033[00m\])'\
'\$ '
    else
        PS1=\
'\[\033[01;32m\]\u@\h\[\033[00m\]('\
'\[\033[01;34m\]$?\[\033[00m\])'\
'\$ '
    fi
else
    PS1='\u@\h($?)\$ '
fi

# If this is an xterm set the title to user@host:dir
case "$TERM" in xterm*|rxvt*)
    PS1="\[\e]0;\u@\H: \w\a\]$PS1" ;;
esac
