# -*-sh-*-

if ! shopt -oq posix ; then
    files=(/etc/bash_completion)

    for dir in /usr/local/etc/bash_completion.d ; do
        if [ -d $dir ] ; then
            files+=($(find $dir -type f -o -type l))
        fi
    done

    for file in ${files[@]} ; do
        if [ -f $file ] ; then
            . $file
        fi
    done
fi
